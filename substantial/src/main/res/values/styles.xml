<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="scanbottombar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <!-- define by huwei -->
    <style name="SweetTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowBackground">@color/f1f3f4</item>
        <item name="android:textColorPrimary">@color/primary_text_white</item>
        <item name="android:textColorSecondary">@color/secondary_text_white</item>
        <item name="android:textViewStyle">@style/SweetTheme.TextView</item>
        <item name="android:buttonStyle">@style/SweetTheme.ButtonStyle</item>
        <!--menu-->
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>

        <!-- <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="SweetTheme.ButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:padding">8dp</item>
    </style>
    <!--溢出菜单样式 -->

    <style name="SweetTheme.TextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--tabLayout的样式-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/x220</item>
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabIndicatorHeight">@dimen/x4</item>
        <item name="tabPaddingStart">@dimen/x30</item>
        <item name="tabPaddingEnd">@dimen/x30</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/x48</item>
        <item name="android:layout_width">@dimen/x160</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingBottom">@dimen/x12</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="textViewWhite" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text_white</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="textViewBack" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text_back</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="secondTextViewBack" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/second_primary_text_back</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="secondTextViewWhite">
        <item name="android:textColor">@color/secondary_text_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- bottom_action_bar -->
    <style name="CommonButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">@dimen/bottom_action_bar_item_padding_left_right</item>
    </style>

    <style name="catalog">
        <!--<item name="android:padding">8dp</item>-->
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="secondTextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
